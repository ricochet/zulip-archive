    {
        "content": "<p>alexcrichton submitted <a href=\"https://github.com/bytecodealliance/wasmtime/pull/5210#pullrequestreview-1170632028\">PR review</a>.</p>",
        "id": 308416216,
        "sender_full_name": "Wasmtime GitHub notifications bot",
